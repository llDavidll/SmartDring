<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/item_profile_specialbg"
        android:layout_width="@dimen/profile_square_size"
        android:layout_height="@dimen/profile_square_size"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/simple_border"
        android:gravity="center"
        android:text="@string/item_profile_special_plus"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_profile_specialbg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/item_profile_special_add_new"
        android:textColor="@color/text_gray" />
</RelativeLayout>